<ul>
<% if @restaurant.errors.full_messages.any? %>
  <% @restaurant.errors.full_messages.each do |error| %>
    <li> <%= error %></li>
  <% end %>
<% end %>

</ul>



<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


  <div class="w-50">
    <div class="form-group">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: "Select restaurant cousin", class: 'form-control' %>
      </div>


    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary"%>
    </div>
  </div>
<% end %>








